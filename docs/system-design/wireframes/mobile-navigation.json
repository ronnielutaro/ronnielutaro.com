{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "screenName": "Mobile Navigation",
  "screenId": "mobile-nav-001",
  "version": "1.0.0",
  "designSystem": "Liquid Glass + MUI",
  "viewport": {
    "mobile": "375x812"
  },
  "components": [
    {
      "id": "mobile-app-bar",
      "component": "AppBar",
      "muiComponent": "AppBar",
      "position": "fixed",
      "styling": {
        "background": "rgba(255, 255, 255, 0.9)",
        "backdropFilter": "blur(20px)",
        "borderBottom": "1px solid rgba(0, 0, 0, 0.08)",
        "boxShadow": "0 4px 16px rgba(0, 0, 0, 0.05)",
        "padding": "12px 16px",
        "zIndex": 1200
      },
      "darkMode": {
        "background": "rgba(30, 30, 30, 0.9)",
        "borderBottom": "1px solid rgba(255, 255, 255, 0.1)"
      },
      "content": {
        "toolbar": {
          "component": "Toolbar",
          "muiComponent": "Toolbar",
          "disableGutters": true,
          "styling": {
            "minHeight": "56px",
            "display": "flex",
            "justifyContent": "space-between",
            "alignItems": "center"
          },
          "elements": [
            {
              "id": "logo",
              "component": "Typography",
              "variant": "h6",
              "text": "RL",
              "styling": {
                "fontWeight": 700,
                "background": "linear-gradient(45deg, #667eea 30%, #764ba2 90%)",
                "backgroundClip": "text",
                "WebkitBackgroundClip": "text",
                "WebkitTextFillColor": "transparent",
                "fontSize": "1.5rem"
              }
            },
            {
              "id": "actions",
              "component": "Box",
              "display": "flex",
              "alignItems": "center",
              "gap": 1,
              "elements": [
                {
                  "component": "IconButton",
                  "muiComponent": "IconButton",
                  "icon": "Brightness4 or Brightness7",
                  "ariaLabel": "Toggle theme",
                  "onClick": "toggle-theme",
                  "styling": {
                    "background": "rgba(102, 126, 234, 0.1)",
                    "color": "primary.main"
                  }
                },
                {
                  "component": "IconButton",
                  "icon": "MenuOutlined",
                  "ariaLabel": "Open menu",
                  "onClick": "open-drawer",
                  "styling": {
                    "background": "rgba(102, 126, 234, 0.1)",
                    "color": "primary.main"
                  }
                }
              ]
            }
          ]
        }
      }
    },
    {
      "id": "mobile-drawer",
      "component": "Drawer",
      "muiComponent": "Drawer",
      "anchor": "right",
      "open": false,
      "onClose": "close-drawer",
      "styling": {
        "paper": {
          "width": "80vw",
          "maxWidth": "320px",
          "background": "rgba(255, 255, 255, 0.95)",
          "backdropFilter": "blur(30px)",
          "borderLeft": "1px solid rgba(255, 255, 255, 0.18)"
        }
      },
      "darkMode": {
        "paper": {
          "background": "rgba(30, 30, 30, 0.95)",
          "borderLeft": "1px solid rgba(255, 255, 255, 0.1)"
        }
      },
      "content": {
        "drawerHeader": {
          "component": "Box",
          "styling": {
            "display": "flex",
            "alignItems": "center",
            "justifyContent": "space-between",
            "padding": "24px 20px 16px",
            "borderBottom": "1px solid rgba(0, 0, 0, 0.08)"
          },
          "elements": [
            {
              "component": "Typography",
              "variant": "h6",
              "text": "Menu",
              "styling": {
                "fontWeight": 700
              }
            },
            {
              "component": "IconButton",
              "icon": "CloseOutlined",
              "ariaLabel": "Close menu",
              "onClick": "close-drawer",
              "size": "small"
            }
          ]
        },
        "navigationList": {
          "component": "List",
          "muiComponent": "List",
          "styling": {
            "padding": "16px 8px"
          },
          "items": [
            {
              "component": "ListItemButton",
              "muiComponent": "ListItemButton",
              "onClick": "navigate-to-home",
              "styling": {
                "borderRadius": "12px",
                "marginBottom": "8px",
                "padding": "12px 16px",
                "selected": {
                  "background": "rgba(102, 126, 234, 0.15)",
                  "color": "primary.main"
                }
              },
              "content": {
                "icon": {
                  "component": "ListItemIcon",
                  "muiComponent": "ListItemIcon",
                  "minWidth": "40px",
                  "icon": "HomeOutlined",
                  "styling": {
                    "color": "inherit"
                  }
                },
                "text": {
                  "component": "ListItemText",
                  "muiComponent": "ListItemText",
                  "primary": "Home",
                  "primaryTypographyProps": {
                    "fontWeight": 600
                  }
                }
              }
            },
            {
              "component": "ListItemButton",
              "onClick": "navigate-to-writing",
              "styling": {
                "borderRadius": "12px",
                "marginBottom": "8px",
                "padding": "12px 16px"
              },
              "content": {
                "icon": {
                  "component": "ListItemIcon",
                  "icon": "CreateOutlined",
                  "minWidth": "40px"
                },
                "text": {
                  "primary": "Writing",
                  "primaryTypographyProps": {
                    "fontWeight": 600
                  }
                }
              }
            },
            {
              "component": "ListItemButton",
              "onClick": "navigate-to-contact",
              "styling": {
                "borderRadius": "12px",
                "marginBottom": "8px",
                "padding": "12px 16px"
              },
              "content": {
                "icon": {
                  "component": "ListItemIcon",
                  "icon": "EmailOutlined",
                  "minWidth": "40px"
                },
                "text": {
                  "primary": "Contact",
                  "primaryTypographyProps": {
                    "fontWeight": 600
                  }
                }
              }
            }
          ]
        },
        "divider": {
          "component": "Divider",
          "styling": {
            "margin": "16px 20px"
          }
        },
        "themeSection": {
          "component": "Box",
          "styling": {
            "padding": "16px 20px"
          },
          "content": {
            "label": {
              "component": "Typography",
              "variant": "caption",
              "text": "APPEARANCE",
              "styling": {
                "fontWeight": 700,
                "color": "text.secondary",
                "letterSpacing": "0.5px",
                "marginBottom": "12px",
                "display": "block"
              }
            },
            "themeToggle": {
              "component": "Card",
              "styling": {
                "background": "rgba(102, 126, 234, 0.1)",
                "backdropFilter": "blur(10px)",
                "borderRadius": "12px",
                "padding": "12px 16px"
              },
              "content": {
                "box": {
                  "component": "Box",
                  "display": "flex",
                  "alignItems": "center",
                  "justifyContent": "space-between",
                  "elements": [
                    {
                      "component": "Box",
                      "display": "flex",
                      "alignItems": "center",
                      "gap": 1.5,
                      "content": {
                        "icon": {
                          "component": "SvgIcon",
                          "icon": "Brightness4Outlined",
                          "color": "primary"
                        },
                        "text": {
                          "component": "Typography",
                          "variant": "body2",
                          "text": "Dark Mode",
                          "styling": {
                            "fontWeight": 600
                          }
                        }
                      }
                    },
                    {
                      "component": "Switch",
                      "muiComponent": "Switch",
                      "checked": false,
                      "onChange": "toggle-theme",
                      "color": "primary"
                    }
                  ]
                }
              }
            }
          }
        },
        "socialSection": {
          "component": "Box",
          "styling": {
            "padding": "16px 20px",
            "marginTop": "auto"
          },
          "content": {
            "label": {
              "component": "Typography",
              "variant": "caption",
              "text": "CONNECT",
              "styling": {
                "fontWeight": 700,
                "color": "text.secondary",
                "letterSpacing": "0.5px",
                "marginBottom": "12px",
                "display": "block"
              }
            },
            "socialButtons": {
              "component": "Box",
              "display": "flex",
              "gap": 1.5,
              "justifyContent": "center",
              "buttons": [
                {
                  "component": "IconButton",
                  "icon": "LinkedIn",
                  "ariaLabel": "LinkedIn",
                  "styling": {
                    "background": "rgba(0, 119, 181, 0.1)",
                    "color": "#0077B5",
                    "hover": {
                      "background": "rgba(0, 119, 181, 0.2)"
                    }
                  }
                },
                {
                  "component": "IconButton",
                  "icon": "GitHub",
                  "ariaLabel": "GitHub",
                  "styling": {
                    "background": "rgba(51, 51, 51, 0.1)",
                    "color": "#333",
                    "hover": {
                      "background": "rgba(51, 51, 51, 0.2)"
                    }
                  }
                },
                {
                  "component": "IconButton",
                  "icon": "Twitter",
                  "ariaLabel": "Twitter",
                  "styling": {
                    "background": "rgba(29, 161, 242, 0.1)",
                    "color": "#1DA1F2",
                    "hover": {
                      "background": "rgba(29, 161, 242, 0.2)"
                    }
                  }
                }
              ]
            }
          }
        },
        "footer": {
          "component": "Box",
          "styling": {
            "padding": "16px 20px",
            "textAlign": "center",
            "borderTop": "1px solid rgba(0, 0, 0, 0.08)"
          },
          "content": {
            "copyright": {
              "component": "Typography",
              "variant": "caption",
              "text": "© 2025 Ronnie Lutaro",
              "styling": {
                "color": "text.secondary"
              }
            }
          }
        }
      }
    },
    {
      "id": "floating-action-button",
      "component": "Fab",
      "muiComponent": "Fab",
      "showWhen": "scrolled-down",
      "ariaLabel": "Scroll to top",
      "onClick": "scroll-to-top",
      "styling": {
        "position": "fixed",
        "bottom": "24px",
        "right": "24px",
        "background": "linear-gradient(45deg, #667eea 30%, #764ba2 90%)",
        "color": "#fff",
        "boxShadow": "0 8px 24px rgba(102, 126, 234, 0.4)",
        "zIndex": 1000,
        "hover": {
          "transform": "scale(1.1)"
        }
      },
      "icon": "KeyboardArrowUpOutlined",
      "animation": "fade-in from bottom"
    }
  ],
  "interactions": {
    "drawerOpen": {
      "trigger": "hamburger-menu-click",
      "animation": "slide-in-from-right 300ms",
      "backdrop": {
        "background": "rgba(0, 0, 0, 0.5)",
        "backdropFilter": "blur(4px)"
      }
    },
    "drawerClose": {
      "triggers": [
        "close-button-click",
        "backdrop-click",
        "navigation-item-click"
      ],
      "animation": "slide-out-to-right 300ms"
    },
    "navigationClick": {
      "action": "navigate-and-close-drawer",
      "scrollToTop": true
    },
    "fabVisibility": {
      "showAfter": "scroll > 300px",
      "animation": "fade-in-up"
    }
  },
  "gestures": {
    "swipeToClose": {
      "direction": "right-to-left",
      "threshold": "50px",
      "action": "close-drawer"
    },
    "swipeToOpen": {
      "enabled": false,
      "note": "Disabled to prevent accidental opens"
    }
  },
  "accessibility": {
    "drawerRole": "navigation",
    "focusTrap": "enabled-when-open",
    "escapeKeyClose": true,
    "ariaLabels": "all-interactive-elements",
    "announcements": "drawer open/close state"
  },
  "animations": {
    "drawerSlide": {
      "duration": "300ms",
      "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "backdropFade": {
      "duration": "300ms",
      "easing": "ease-in-out"
    },
    "listItemHover": {
      "duration": "200ms",
      "easing": "ease"
    }
  }
}

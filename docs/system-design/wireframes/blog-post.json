{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "screenName": "Individual Blog Post Page",
  "screenId": "blog-post-001",
  "version": "2.0.1",
  "designSystem": "Premium Dark Glassmorphism + MUI + MDX",
  "description": "Updated to include standardized navbar-v2 component",
  "viewport": {
    "mobile": "375x812",
    "tablet": "768x1024",
    "desktop": "1440x900"
  },
  "layout": {
    "type": "article-with-sidebar",
    "background": "#06080f",
    "sections": [
      {
        "id": "navbar",
        "componentRef": "navbar-v2",
        "componentPath": "wireframes/components/navbar.json",
        "activeItem": "Blog",
        "note": "Fixed centered glass navbar - Blog is highlighted as this is a blog post"
      },
      {
        "id": "post-hero",
        "component": "Box",
        "muiComponent": "Box",
        "styling": {
          "position": "relative",
          "height": "500px",
          "overflow": "hidden",
          "marginBottom": "64px"
        },
        "content": {
          "backgroundImage": {
            "component": "Box",
            "styling": {
              "position": "absolute",
              "top": 0,
              "left": 0,
              "right": 0,
              "bottom": 0,
              "backgroundImage": "url('/blog/post-hero.jpg')",
              "backgroundSize": "cover",
              "backgroundPosition": "center",
              "filter": "brightness(0.7)"
            }
          },
          "gradientOverlay": {
            "component": "Box",
            "styling": {
              "position": "absolute",
              "top": 0,
              "left": 0,
              "right": 0,
              "bottom": 0,
              "background": "linear-gradient(180deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.7) 100%)"
            }
          },
          "heroContent": {
            "component": "Container",
            "maxWidth": "md",
            "styling": {
              "position": "relative",
              "height": "100%",
              "display": "flex",
              "flexDirection": "column",
              "justifyContent": "flex-end",
              "paddingBottom": "48px",
              "zIndex": 1
            },
            "elements": [
              {
                "component": "Chip",
                "label": "Product Management",
                "styling": {
                  "background": "rgba(255, 255, 255, 0.25)",
                  "backdropFilter": "blur(10px)",
                  "color": "#fff",
                  "fontWeight": 600,
                  "marginBottom": "16px",
                  "border": "1px solid rgba(255, 255, 255, 0.3)"
                }
              },
              {
                "component": "Typography",
                "variant": "h1",
                "text": "Building Products Users Love: Lessons from StartHub",
                "styling": {
                  "color": "#fff",
                  "fontWeight": 800,
                  "fontSize": {
                    "mobile": "2rem",
                    "tablet": "2.75rem",
                    "desktop": "3.5rem"
                  },
                  "marginBottom": "24px",
                  "textShadow": "0 2px 8px rgba(0,0,0,0.3)"
                }
              },
              {
                "component": "Box",
                "display": "flex",
                "alignItems": "center",
                "gap": 3,
                "flexWrap": "wrap",
                "metadata": [
                  {
                    "component": "Box",
                    "display": "flex",
                    "alignItems": "center",
                    "gap": 1.5,
                    "content": {
                      "avatar": {
                        "component": "Avatar",
                        "src": "/author-avatar.jpg",
                        "alt": "Ronnie Lutaro",
                        "size": 40
                      },
                      "authorName": {
                        "component": "Typography",
                        "variant": "body1",
                        "text": "Ronnie Lutaro",
                        "styling": {
                          "color": "#fff",
                          "fontWeight": 600
                        }
                      }
                    }
                  },
                  {
                    "component": "Typography",
                    "variant": "body2",
                    "text": "•",
                    "styling": {
                      "color": "rgba(255, 255, 255, 0.7)"
                    }
                  },
                  {
                    "component": "Box",
                    "display": "flex",
                    "alignItems": "center",
                    "gap": 0.5,
                    "content": {
                      "icon": {
                        "component": "SvgIcon",
                        "icon": "CalendarTodayOutlined",
                        "fontSize": "small",
                        "styling": {
                          "color": "rgba(255, 255, 255, 0.9)"
                        }
                      },
                      "text": {
                        "component": "Typography",
                        "variant": "body2",
                        "text": "October 9, 2025",
                        "styling": {
                          "color": "rgba(255, 255, 255, 0.9)"
                        }
                      }
                    }
                  },
                  {
                    "component": "Typography",
                    "variant": "body2",
                    "text": "•",
                    "styling": {
                      "color": "rgba(255, 255, 255, 0.7)"
                    }
                  },
                  {
                    "component": "Box",
                    "display": "flex",
                    "alignItems": "center",
                    "gap": 0.5,
                    "content": {
                      "icon": {
                        "component": "SvgIcon",
                        "icon": "AccessTimeOutlined",
                        "fontSize": "small",
                        "styling": {
                          "color": "rgba(255, 255, 255, 0.9)"
                        }
                      },
                      "text": {
                        "component": "Typography",
                        "variant": "body2",
                        "text": "5 min read",
                        "styling": {
                          "color": "rgba(255, 255, 255, 0.9)"
                        }
                      }
                    }
                  }
                ]
              }
            ]
          }
        }
      },
      {
        "id": "progress-bar",
        "component": "LinearProgress",
        "muiComponent": "LinearProgress",
        "variant": "determinate",
        "value": 0,
        "styling": {
          "position": "fixed",
          "top": "64px",
          "left": 0,
          "right": 0,
          "zIndex": 1200,
          "height": "3px",
          "background": "transparent",
          "bar": {
            "background": "linear-gradient(90deg, #667eea 0%, #764ba2 100%)"
          }
        },
        "behavior": "updates-on-scroll"
      },
      {
        "id": "article-content-wrapper",
        "component": "Container",
        "maxWidth": "xl",
        "styling": {
          "paddingBottom": "80px"

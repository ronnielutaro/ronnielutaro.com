                            {
                              "component": "Button",
                              "variant": "outlined",
                              "fullWidth": true,
                              "startIcon": "LinkedIn",
                              "text": "LinkedIn",
                              "onClick": "share-to-linkedin",
                              "styling": {
                                "borderRadius": "12px",
                                "textTransform": "none",
                                "justifyContent": "flex-start",
                                "borderColor": "rgba(0, 119, 181, 0.3)",

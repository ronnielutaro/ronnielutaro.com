                                "hover": {
                                  "background": "rgba(0, 119, 181, 0.1)",
                                  "borderColor": "#0077B5"
                                }
                              }
                            },
                            {
                              "component": "Button",
                              "variant": "outlined",
                              "fullWidth": true,
                              "startIcon": "Link",
                              "text": "Copy Link",
                              "onClick": "copy-link-to-clipboard",
                              "styling": {
                                "borderRadius": "12px",
                                "textTransform": "none",
                                "justifyContent": "flex-start",
                                "borderColor": "rgba(102, 126, 234, 0.3)",

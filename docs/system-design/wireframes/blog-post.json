                    "card": {
                      "component": "Card",
                      "styling": {
                        "background": "rgba(255, 255, 255, 0.6)",
                        "backdropFilter": "blur(20px)",
                        "borderRadius": "16px",
                        "border": "1px solid rgba(255, 255, 255, 0.18)",
                        "padding": "24px"
                      },
                      "content": {
                        "title": {
                          "component": "Typography",
                          "variant": "subtitle2",
                          "text": "TABLE OF CONTENTS",

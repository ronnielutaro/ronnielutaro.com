                "id": "table-of-contents-sidebar",
                "gridItem": {
                  "xs": 12,
                  "lg": 3
                },
                "display": {
                  "xs": "none",
                  "lg": "block"
                },
                "content": {
                  "stickyContainer": {
                    "component": "Box",
                    "styling": {
                      "position": "sticky",
                      "top": "100px"

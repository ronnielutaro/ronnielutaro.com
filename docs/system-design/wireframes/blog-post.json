                            "fontWeight": 700,
                            "marginBottom": "16px",
                            "color": "text.secondary",
                            "letterSpacing": "0.5px"
                          }
                        },
                        "tocList": {
                          "component": "List",
                          "muiComponent": "List",
                          "dense": true,
                          "items": [
                            {
                              "component": "ListItemButton",
                              "muiComponent": "ListItemButton",
                              "selected": true,
                              "onClick": "scroll-to-heading-1",
                              "styling": {
                                "borderRadius": "8px",
                                "marginBottom": "4px",
                                "selected": {
                                  "background": "rgba(102, 126, 234, 0.15)",
                                  "borderLeft": "3px solid #667eea"
                                }
                              },
                              "content": {
                                "text": {
                                  "component": "ListItemText",
                                  "primary": "Introduction",
                                  "primaryTypographyProps": {
                                    "variant": "body2",
                                    "fontWeight": 500
                                  }
                                }
                              }
                            },
                            {
                              "component": "ListItemButton",
                              "content": {
                                "text": {
                                  "primary": "Customer Discovery Process"
                                }
                              }
                            },
                            {
                              "component": "ListItemButton",
                              "content": {
                                "text": {
                                  "primary": "Translating Insights to Features"
                                }
                              }
                            },
                            {
                              "component": "ListItemButton",
                              "content": {
                                "text": {
                                  "primary": "Post-Launch Iteration"
                                }
                              }
                            },
                            {
                              "component": "ListItemButton",
                              "content": {
                                "text": {
                                  "primary": "Key Takeaways"
                                }
                              }
                            }
                          ]
                        }
                      }
                    }
                  }
                }
              },
              {
                "id": "main-article-content",
                "gridItem": {
                  "xs": 12,
                  "lg": 6
                },
                "content": {
                  "articleCard": {
                    "component": "Card",
                    "styling": {
                      "background": "rgba(255, 255, 255, 0.8)",
                      "backdropFilter": "blur(20px)",
                      "borderRadius": "20px",
                      "border": "1px solid rgba(255, 255, 255, 0.18)",
                      "padding": {
                        "mobile": "24px",
                        "tablet": "40px",
                        "desktop": "48px"
                      }
                    },
                    "content": {
                      "mdxContent": {
                        "component": "MDXContent",
                        "styling": {
                          "h2": {
                            "fontWeight": 700,
                            "fontSize": "2rem",
                            "marginTop": "48px",
                            "marginBottom": "16px",
                            "color": "text.primary",
                            "scrollMarginTop": "100px"
                          },
                          "h3": {
                            "fontWeight": 600,
                            "fontSize": "1.5rem",
                            "marginTop": "32px",
                            "marginBottom": "12px",
                            "scrollMarginTop": "100px"
                          },
                          "p": {
                            "fontSize": "1.125rem",
                            "lineHeight": 1.8,
                            "marginBottom": "24px",
                            "color": "text.primary"
                          },
                          "a": {
                            "color": "primary.main",
                            "textDecoration": "underline",
                            "textUnderlineOffset": "3px",
                            "hover": {
                              "color": "primary.dark"
                            }
                          },
                          "ul": {
                            "marginBottom": "24px",
                            "paddingLeft": "24px"
                          },
                          "li": {
                            "fontSize": "1.125rem",
                            "lineHeight": 1.8,
                            "marginBottom": "8px"
                          },
                          "blockquote": {
                            "borderLeft": "4px solid",
                            "borderColor": "primary.main",
                            "paddingLeft": "24px",
                            "marginLeft": 0,
                            "marginBottom": "24px",
                            "fontStyle": "italic",
                            "color": "text.secondary",
                            "background": "rgba(102, 126, 234, 0.05)",
                            "padding": "16px 24px",
                            "borderRadius": "0 8px 8px 0"
                          },
                          "code": {
                            "fontFamily": "monospace",
                            "fontSize": "0.9em",
                            "background": "rgba(0, 0, 0, 0.05)",
                            "padding": "2px 6px",
                            "borderRadius": "4px",
                            "color": "#e83e8c"
                          },
                          "pre": {
                            "background": "rgba(30, 30, 30, 0.95)",
                            "backdropFilter": "blur(10px)",
                            "borderRadius": "12px",
                            "padding": "24px",
                            "marginBottom": "24px",
                            "overflow": "auto",
                            "position": "relative",
                            "border": "1px solid rgba(255, 255, 255, 0.1)"
                          },
                          "pre code": {
                            "background": "transparent",
                            "padding": 0,
                            "color": "#f8f8f2",
                            "fontSize": "0.95rem",
                            "lineHeight": 1.6
                          },
                          "img": {
                            "maxWidth": "100%",
                            "height": "auto",
                            "borderRadius": "12px",
                            "marginBottom": "24px",
                            "cursor": "zoom-in"
                          }
                        },
                        "customComponents": {
                          "CodeBlock": {
                            "description": "Syntax highlighted code with copy button",
                            "features": [
                              "Language indicator",
                              "Copy to clipboard button",
                              "Line numbers (optional)",
                              "Syntax highlighting"
                            ]
                          },
                          "Callout": {
                            "variants": [
                              "info",
                              "warning",
                              "success",
                              "error"
                            ],
                            "styling": {
                              "background": "glassmorphic",
                              "borderRadius": "12px",
                              "padding": "16px",
                              "marginBottom": "24px",
                              "icon": "variant-specific"
                            }
                          },
                          "ImageZoom": {
                            "description": "Clickable images with lightbox",
                            "features": [
                              "Click to zoom",
                              "Caption support",
                              "Close on outside click"
                            ]
                          }
                        }
                      }
                    }
                  }
                }
              },
              {
                "id": "social-share-sidebar",
                "gridItem": {
                  "xs": 12,
                  "lg": 3
                },
                "display": {
                  "xs": "none",
                  "lg": "block"
                },
                "content": {
                  "stickyContainer": {
                    "component": "Box",
                    "styling": {
                      "position": "sticky",
                      "top": "100px"
                    },
                    "card": {
                      "component": "Card",
                      "styling": {
                        "background": "rgba(255, 255, 255, 0.6)",

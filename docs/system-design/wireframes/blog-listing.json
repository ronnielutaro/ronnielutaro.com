{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "screenName": "Blog Listing Page (Writing)",
  "screenId": "blog-listing-001",
  "version": "2.0.1",
  "designSystem": "Premium Dark Glassmorphism + MUI",
  "description": "Updated to include standardized navbar-v2 component",
  "viewport": {
    "mobile": "375x812",
    "tablet": "768x1024",
    "desktop": "1440x900"
  },
  "layout": {
    "type": "full-page-with-filters",
    "background": "#06080f",
    "sections": [
      {
        "id": "navbar",
        "componentRef": "navbar-v2",
        "componentPath": "wireframes/components/navbar.json",
        "activeItem": "Blog",
        "note": "Fixed centered glass navbar - Blog is highlighted in emerald"
      },
      {
        "id": "page-hero",
        "component": "Box",
        "muiComponent": "Box",
        "styling": {
          "background": "transparent",
          "paddingTop": "120px",
          "paddingBottom": "80px",
          "position": "relative"
        },
        "content": {
          "container": {
            "component": "Container",
            "maxWidth": "lg",
            "content": {
              "title": {
                "component": "Typography",
                "variant": "h1",
                "text": "Writing & Thoughts",
                "styling": {
                  "fontWeight": 800,
                  "fontSize": {
                    "mobile": "2.5rem",
                    "desktop": "4rem"
                  },
                  "textAlign": "center",
                  "marginBottom": "16px",
                  "color": "#ffffff"
                }
              },
              "subtitle": {
                "component": "Typography",
                "variant": "h5",
                "text": "Insights on product management, engineering, and lessons learned along the way",
                "styling": {
                  "textAlign": "center",
                  "color": "rgba(255, 255, 255, 0.7)",
                  "maxWidth": "700px",
                  "margin": "0 auto",
                  "fontWeight": 400
                }
              }
            }
          }
        }
      },
      {
        "id": "search-filter-section",
        "component": "Box",
        "muiComponent": "Box",
        "styling": {
          "background": "rgba(255, 255, 255, 0.05)",
          "backdropFilter": "blur(20px) saturate(180%)",
          "borderBottom": "1px solid rgba(96, 165, 250, 0.2)",
          "position": "sticky",
          "top": "80px",
          "zIndex": 100,
          "padding": "24px 0"
        },
        "content": {
          "container": {
            "component": "Container",
            "maxWidth": "lg",
            "content": {
              "searchBar": {
                "component": "TextField",
                "muiComponent": "TextField",
                "fullWidth": true,
                "placeholder": "Search posts...",
                "variant": "outlined",
                "InputProps": {
                  "startAdornment": {
                    "component": "InputAdornment",
                    "position": "start",
                    "icon": "SearchOutlined"
                  }
                },
                "styling": {
                  "background": "rgba(255, 255, 255, 0.9)",
                  "borderRadius": "16px",
                  "marginBottom": "24px",
                  "input": {
                    "padding": "14px 16px"
                  },
                  "fieldset": {
                    "borderRadius": "16px",
                    "borderColor": "rgba(0, 0, 0, 0.1)"
                  },
                  "hover": {
                    "background": "#fff",
                    "fieldset": {
                      "borderColor": "rgba(102, 126, 234, 0.5)"
                    }
                  }
                }
              },
              "filterControls": {
                "component": "Box",
                "display": "flex",
                "flexDirection": {
                  "xs": "column",
                  "md": "row"
                },
                "justifyContent": "space-between",
                "alignItems": {
                  "xs": "stretch",
                  "md": "center"
                },
                "gap": 2,
                "content": {
                  "categoryFilters": {
                    "component": "Box",
                    "display": "flex",
                    "gap": 1,
                    "flexWrap": "wrap",
                    "alignItems": "center",
                    "content": {
                      "label": {
                        "component": "Typography",
                        "variant": "body2",
                        "text": "Categories:",
                        "styling": {
                          "fontWeight": 600,
                          "color": "rgba(255, 255, 255, 0.7)",
                          "marginRight": "8px"
                        }
                      },
                      "chips": [
                        {
                          "component": "Chip",
                          "muiComponent": "Chip",
                          "label": "All",
                          "clickable": true,
                          "variant": "filled",
                          "color": "primary",
                          "styling": {
                            "background": "rgba(96, 165, 250, 0.2)",
                            "backdropFilter": "blur(10px)",
                            "borderRadius": "12px",
                            "fontWeight": 500,
                            "selected": {
                              "background": "linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%)",
                              "color": "#fff"
                            }
                          }
                        },
                        {
                          "component": "Chip",
                          "label": "Product Management",
                          "clickable": true,
                          "variant": "outlined",
                          "styling": {
                            "borderRadius": "12px",
                            "borderColor": "rgba(96, 165, 250, 0.3)",
                            "hover": {
                              "background": "rgba(96, 165, 250, 0.1)"
                            }
                          }
                        },
                        {
                          "component": "Chip",
                          "label": "Engineering",
                          "clickable": true,
                          "variant": "outlined",
                          "styling": {
                            "borderRadius": "12px",
                            "borderColor": "rgba(118, 75, 162, 0.3)"
                          }
                        },
                        {
                          "component": "Chip",
                          "label": "Lessons",
                          "clickable": true,
                          "variant": "outlined",
                          "styling": {
                            "borderRadius": "12px",
                            "borderColor": "rgba(79, 172, 254, 0.3)"
                          }
                        },
                        {
                          "component": "Chip",
                          "label": "Stories",
                          "clickable": true,
                          "variant": "outlined",
                          "styling": {
                            "borderRadius": "12px",
                            "borderColor": "rgba(240, 147, 251, 0.3)"
                          }
                        },
                        {
                          "component": "Chip",
                          "label": "Projects",
                          "clickable": true,
                          "variant": "outlined",
                          "styling": {
                            "borderRadius": "12px",
                            "borderColor": "rgba(102, 126, 234, 0.3)"
                          }
                        }
                      ]
                    }
                  },
                  "sortControl": {
                    "component": "FormControl",
                    "muiComponent": "FormControl",
                    "size": "small",
                    "content": {
                      "select": {
                        "component": "Select",
                        "muiComponent": "Select",
                        "value": "latest",
                        "label": "Sort by",
                        "styling": {
                          "minWidth": "140px",
                          "background": "rgba(255, 255, 255, 0.9)",
                          "borderRadius": "12px"
                        },
                        "options": [
                          {
                            "component": "MenuItem",
                            "value": "latest",
                            "text": "Latest First"
                          },
                          {
                            "component": "MenuItem",
                            "value": "oldest",
                            "text": "Oldest First"
                          },
                          {
                            "component": "MenuItem",
                            "value": "popular",
                            "text": "Most Popular"
                          }
                        ]
                      }
                    }
                  }
                }
              },
              "resultsCount": {
                "component": "Typography",
                "variant": "body2",
                "text": "Showing 12 posts",
                "styling": {
                  "color": "rgba(255, 255, 255, 0.6)",
                  "marginTop": "16px",
                  "textAlign": "center"
                }
              }
            }
          }
        }
      },
      {
        "id": "blog-posts-grid",
        "component": "Container",
        "muiComponent": "Container",
        "maxWidth": "lg",
        "styling": {
          "paddingTop": "64px",
          "paddingBottom": "64px"
        },
        "content": {
          "grid": {
            "component": "Grid",
            "muiComponent": "Grid",
            "container": true,
            "spacing": 4,
            "posts": [
              {
                "gridItem": {
                  "xs": 12,
                  "sm": 6,
                  "md": 4
                },
                "card": {
                  "component": "Card",
                  "muiComponent": "Card",
                  "styling": {
                    "background": "rgba(255, 255, 255, 0.7)",
                    "backdropFilter": "blur(20px)",
                    "borderRadius": "20px",
                    "border": "1px solid rgba(255, 255, 255, 0.18)",
                    "overflow": "hidden",
                    "height": "100%",
                    "display": "flex",
                    "flexDirection": "column",
                    "cursor": "pointer",
                    "transition": "all 0.3s cubic-bezier(0.4, 0, 0.2, 1)",
                    "hover": {
                      "transform": "translateY(-8px)",
                      "boxShadow": "0 20px 40px rgba(0, 0, 0, 0.15)"
                    }
                  },
                  "content": {
                    "imageContainer": {
                      "component": "Box",
                      "position": "relative",
                      "content": {
                        "media": {
                          "component": "CardMedia",
                          "muiComponent": "CardMedia",
                          "height": 220,
                          "image": "/blog/post-thumbnail.jpg",
                          "alt": "Post cover image"
                        },
                        "categoryBadge": {
                          "component": "Chip",
                          "muiComponent": "Chip",
                          "label": "Product Management",
                          "size": "small",
                          "styling": {
                            "position": "absolute",
                            "top": "12px",
                            "left": "12px",
                            "background": "rgba(255, 255, 255, 0.95)",
                            "backdropFilter": "blur(10px)",
                            "fontWeight": 600,
                            "fontSize": "0.75rem"
                          }
                        }
                      }
                    },
                    "cardContent": {
                      "component": "CardContent",
                      "muiComponent": "CardContent",
                      "flexGrow": 1,
                      "styling": {
                        "padding": "20px"
                      },
                      "elements": [
                        {
                          "component": "Box",
                          "display": "flex",
                          "alignItems": "center",
                          "gap": 1,
                          "marginBottom": "12px",
                          "content": {
                            "date": {
                              "component": "Typography",
                              "variant": "caption",
                              "text": "Oct 9, 2025",
                              "styling": {
                                "color": "rgba(255, 255, 255, 0.6)",
                                "display": "flex",
                                "alignItems": "center",
                                "gap": "4px"
                              },
                              "icon": "CalendarTodayOutlined",
                              "iconSize": "small"
                            },
                            "divider": {
                              "component": "Typography",
                              "variant": "caption",
                              "text": "â€¢",
                              "styling": {
                                "color": "rgba(255, 255, 255, 0.6)"
                              }
                            },
                            "readTime": {
                              "component": "Typography",
                              "variant": "caption",
                              "text": "5 min read",
                              "styling": {
                                "color": "rgba(255, 255, 255, 0.6)",
                                "display": "flex",
                                "alignItems": "center",
                                "gap": "4px"
                              },
                              "icon": "AccessTimeOutlined",
                              "iconSize": "small"
                            }
                          }
                        },
                        {
                          "component": "Typography",
                          "variant": "h6",
                          "text": "Building Products Users Love: Lessons from StartHub",
                          "styling": {
                            "fontWeight": 600,
                            "marginBottom": "12px",
                            "lineHeight": 1.3,
                            "display": "-webkit-box",
                            "WebkitLineClamp": 2,
                            "WebkitBoxOrient": "vertical",
                            "overflow": "hidden"
                          }
                        },
                        {
                          "component": "Typography",
                          "variant": "body2",
                          "text": "After supporting 10+ founders from idea to market, here are the key insights I've learned about customer discovery, feature prioritization, and post-launch iteration...",
                          "styling": {
                            "color": "rgba(255, 255, 255, 0.7)",
                            "lineHeight": 1.6,
                            "display": "-webkit-box",
                            "WebkitLineClamp": 3,
                            "WebkitBoxOrient": "vertical",
                            "overflow": "hidden"
                          }
                        }
                      ]
                    },
                    "cardActions": {
                      "component": "Box",
                      "styling": {
                        "padding": "0 20px 20px",
                        "display": "flex",
                        "justifyContent": "space-between",
                        "alignItems": "center"
                      },
                      "content": {
                        "tags": {
                          "component": "Box",
                          "display": "flex",
                          "gap": 0.5,
                          "flexWrap": "wrap",
                          "chips": [
                            {
                              "component": "Chip",
                              "label": "Product",
                              "size": "small",
                              "variant": "outlined",
                              "styling": {
                                "fontSize": "0.7rem",
                                "height": "24px"
                              }
                            },
                            {
                              "component": "Chip",
                              "label": "Strategy",
                              "size": "small",
                              "variant": "outlined",
                              "styling": {
                                "fontSize": "0.7rem",
                                "height": "24px"
                              }
                            }
                          ]
                        },
                        "readMore": {
                          "component": "IconButton",
                          "muiComponent": "IconButton",
                          "size": "small",
                          "icon": "ArrowForward",
                          "ariaLabel": "Read more",
                          "styling": {
                            "color": "primary.main"
                          }
                        }
                      }
                    }
                  }
                }
              },
              {
                "note": "Repeat card structure for 9-12 blog posts in grid"
              }
            ]
          },
          "emptyState": {
            "component": "Box",
            "display": "flex",
            "flexDirection": "column",
            "alignItems": "center",
            "justifyContent": "center",
            "minHeight": "400px",
            "showWhen": "no-results",
            "content": {
              "icon": {
                "component": "SvgIcon",
                "icon": "SearchOff",
                "styling": {
                  "fontSize": "80px",
                  "color": "text.disabled",
                  "marginBottom": "16px"
                }
              },
              "title": {
                "component": "Typography",
                "variant": "h5",
                "text": "No posts found",
                "styling": {
                  "fontWeight": 600,
                  "marginBottom": "8px"
                }
              },
              "message": {
                "component": "Typography",
                "variant": "body2",
                "text": "Try adjusting your search or filters",
                "styling": {
                  "color": "rgba(255, 255, 255, 0.6)",
                  "marginBottom": "24px"
                }
              },
              "clearButton": {
                "component": "Button",
                "variant": "outlined",
                "text": "Clear Filters",
                "onClick": "reset-all-filters"
              }
            }
          }
        }
      },
      {
        "id": "pagination-section",
        "component": "Container",
        "maxWidth": "lg",
        "styling": {
          "paddingBottom": "64px"
        },
        "content": {
          "pagination": {
            "component": "Box",
            "display": "flex",
            "justifyContent": "center",
            "content": {
              "paginationComponent": {
                "component": "Pagination",
                "muiComponent": "Pagination",
                "count": 5,
                "page": 1,
                "variant": "outlined",
                "shape": "rounded",
                "size": "large",
                "styling": {
                  "button": {
                    "background": "rgba(255, 255, 255, 0.7)",
                    "backdropFilter": "blur(10px)",
                    "border": "1px solid rgba(0, 0, 0, 0.08)",
                    "margin": "0 4px",
                    "hover": {
                      "background": "rgba(96, 165, 250, 0.1)"
                    },
                    "selected": {
                      "background": "linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%)",
                      "color": "#fff",
                      "border": "none"
                    }
                  }
                }
              }
            }
          },
          "loadMoreButton": {
            "component": "Box",
            "display": "flex",
            "justifyContent": "center",
            "marginTop": "32px",
            "alternativeTo": "pagination",
            "content": {
              "button": {
                "component": "Button",
                "muiComponent": "Button",
                "variant": "outlined",
                "size": "large",
                "text": "Load More Posts",
                "startIcon": "ExpandMore",
                "styling": {
                  "borderRadius": "12px",
                  "padding": "12px 32px",
                  "textTransform": "none",
                  "fontWeight": 600,
                  "background": "rgba(255, 255, 255, 0.7)",
                  "backdropFilter": "blur(10px)",
                  "border": "2px solid rgba(102, 126, 234, 0.3)",
                  "hover": {
                    "background": "rgba(102, 126, 234, 0.1)",
                    "border": "2px solid rgba(102, 126, 234, 0.5)"
                  }
                }
              }
            }
          }
        }
      },
      {
        "id": "newsletter-cta",
        "component": "Container",
        "maxWidth": "md",
        "styling": {
          "paddingBottom": "120px"
        },
        "content": {
          "card": {
            "component": "Card",
            "styling": {
              "background": "linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.15) 100%)",
              "backdropFilter": "blur(30px)",
              "borderRadius": "24px",
              "border": "1px solid rgba(255, 255, 255, 0.18)",
              "padding": "48px",
              "textAlign": "center"
            },
            "content": {
              "icon": {
                "component": "SvgIcon",
                "icon": "EmailOutlined",
                "styling": {
                  "fontSize": "48px",
                  "color": "primary.main",
                  "marginBottom": "16px"
                }
              },
              "title": {
                "component": "Typography",
                "variant": "h4",
                "text": "Never Miss a Post",
                "styling": {
                  "fontWeight": 700,
                  "marginBottom": "12px"
                }
              },
              "description": {
                "component": "Typography",
                "variant": "body1",
                "text": "Get new posts delivered to your inbox",
                "styling": {
                  "color": "rgba(255, 255, 255, 0.7)",
                  "marginBottom": "32px"
                }
              },
              "subscribeForm": {
                "component": "Box",
                "display": "flex",
                "gap": 2,
                "maxWidth": "500px",
                "margin": "0 auto",
                "flexDirection": {
                  "xs": "column",
                  "sm": "row"
                },
                "content": {
                  "emailInput": {
                    "component": "TextField",
                    "type": "email",
                    "placeholder": "Your email address",
                    "variant": "outlined",
                    "fullWidth": true,
                    "styling": {
                      "background": "rgba(255, 255, 255, 0.9)",
                      "borderRadius": "12px"
                    }
                  },
                  "submitButton": {
                    "component": "Button",
                    "variant": "contained",
                    "size": "large",
                    "text": "Subscribe",
                    "styling": {
                      "background": "linear-gradient(135deg, #34d399 0%, #10b981 100%)",
                      "borderRadius": "12px",
                      "padding": "12px 32px",
                      "textTransform": "none",
                      "fontWeight": 600,
                      "whiteSpace": "nowrap"
                    }
                  }
                }
              }
            }
          }
        }
      }
    ]
  },
  "stateManagement": {
    "searchQuery": "string",
    "selectedCategory": "string | 'all'",
    "sortOrder": "'latest' | 'oldest' | 'popular'",
    "currentPage": "number",
    "postsPerPage": 12,
    "filteredPosts": "array"
  },
  "interactions": {
    "search": {
      "type": "live-filter",
      "debounce": "300ms",
      "caseSensitive": false
    },
    "categoryFilter": {
      "type": "single-select",
      "defaultValue": "all"
    },
    "cardClick": {
      "action": "navigate-to-post-detail",
      "animation": "fade-transition"
    },
    "pagination": {
      "type": "client-side or infinite-scroll",
      "smoothScroll": true
    }
  },
  "responsive": {
    "mobile": {
      "gridColumns": 1,
      "filterLayout": "stacked",
      "searchPosition": "top"
    },
    "tablet": {
      "gridColumns": 2,
      "filterLayout": "wrapped"
    },
    "desktop": {
      "gridColumns": 3,
      "filterLayout": "horizontal"
    }
  },
  "accessibility": {
    "searchLabel": "Search blog posts",
    "filterLabels": "Category filters",
    "cardRole": "article",
    "focusManagement": "maintain on filter change",
    "announcements": "announce result count changes"
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "documentName": "Design System & Component Library",
  "documentId": "design-system-001",
  "version": "1.0.0",
  "description": "Apple Liquid Glass Design System with MUI Components",
  "themeConfiguration": {
    "colorPalette": {
      "primary": {
        "main": "#667eea",
        "light": "#8e9ff5",
        "dark": "#4d5fd1",
        "contrastText": "#ffffff"
      },
      "secondary": {
        "main": "#764ba2",
        "light": "#9169b8",
        "dark": "#5a3a7d",
        "contrastText": "#ffffff"
      },
      "accent": {
        "copper": "#d4a574",
        "gold": "#f4a460"
      },
      "gradients": {
        "primary": "linear-gradient(45deg, #667eea 30%, #764ba2 90%)",
        "mesh": "linear-gradient(135deg, #667eea 0%, #764ba2 25%, #f093fb 50%, #4facfe 100%)",
        "subtle": "linear-gradient(180deg, rgba(102, 126, 234, 0.05) 0%, transparent 100%)"
      },
      "neutral": {
        "50": "#fafafa",
        "100": "#f5f5f5",
        "200": "#eeeeee",
        "300": "#e0e0e0",
        "400": "#bdbdbd",
        "500": "#9e9e9e",
        "600": "#757575",
        "700": "#616161",
        "800": "#424242",
        "900": "#212121"
      },
      "background": {
        "default": "#ffffff",
        "paper": "#fafafa",
        "glass": "rgba(255, 255, 255, 0.7)"
      },
      "text": {
        "primary": "rgba(0, 0, 0, 0.87)",
        "secondary": "rgba(0, 0, 0, 0.6)",
        "disabled": "rgba(0, 0, 0, 0.38)"
      }
    },
    "darkMode": {
      "palette": {
        "background": {
          "default": "#121212",
          "paper": "#1e1e1e",
          "glass": "rgba(30, 30, 30, 0.7)"
        },
        "text": {
          "primary": "rgba(255, 255, 255, 0.95)",
          "secondary": "rgba(255, 255, 255, 0.7)",
          "disabled": "rgba(255, 255, 255, 0.5)"
        }
      }
    },
    "typography": {
      "fontFamily": {
        "primary": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif",
        "code": "'JetBrains Mono', 'Fira Code', 'Courier New', monospace"
      },
      "scale": {
        "h1": {
          "fontSize": {
            "mobile": "2.5rem",
            "tablet": "3.5rem",
            "desktop": "4rem"
          },
          "fontWeight": 800,
          "lineHeight": 1.1,
          "letterSpacing": "-0.02em"
        },
        "h2": {
          "fontSize": {
            "mobile": "2rem",
            "tablet": "2.75rem",
            "desktop": "3rem"
          },
          "fontWeight": 700,
          "lineHeight": 1.2,
          "letterSpacing": "-0.01em"
        },
        "h3": {
          "fontSize": {
            "mobile": "1.75rem",
            "tablet": "2rem",
            "desktop": "2.25rem"
          },
          "fontWeight": 700,
          "lineHeight": 1.3
        },
        "h4": {
          "fontSize": {
            "mobile": "1.5rem",
            "tablet": "1.75rem",
            "desktop": "2rem"
          },
          "fontWeight": 600,
          "lineHeight": 1.4
        },
        "h5": {
          "fontSize": "1.5rem",
          "fontWeight": 600,
          "lineHeight": 1.4
        },
        "h6": {
          "fontSize": "1.25rem",
          "fontWeight": 600,
          "lineHeight": 1.5
        },
        "body1": {
          "fontSize": "1.125rem",
          "fontWeight": 400,
          "lineHeight": 1.7
        },
        "body2": {
          "fontSize": "1rem",
          "fontWeight": 400,
          "lineHeight": 1.6
        },
        "caption": {
          "fontSize": "0.875rem",
          "fontWeight": 400,
          "lineHeight": 1.5
        }
      }
    },
    "spacing": {
      "unit": 8,
      "scale": [0, 4, 8, 12, 16, 24, 32, 40, 48, 64, 80, 96, 120]
    },
    "borderRadius": {
      "small": "8px",
      "medium": "12px",
      "large": "16px",
      "xlarge": "20px",
      "xxlarge": "24px",
      "round": "50%"
    },
    "shadows": {
      "glass": "0 8px 32px 0 rgba(31, 38, 135, 0.37)",
      "glassSoft": "0 8px 32px 0 rgba(31, 38, 135, 0.15)",
      "elevation1": "0 2px 8px rgba(0, 0, 0, 0.08)",
      "elevation2": "0 4px 16px rgba(0, 0, 0, 0.1)",
      "elevation3": "0 8px 24px rgba(0, 0, 0, 0.12)",
      "elevation4": "0 12px 32px rgba(0, 0, 0, 0.15)",
      "glow": "0 0 20px rgba(102, 126, 234, 0.3)"
    },
    "transitions": {
      "duration": {
        "shortest": "150ms",
        "shorter": "200ms",
        "short": "250ms",
        "standard": "300ms",
        "complex": "375ms",
        "enteringScreen": "225ms",
        "leavingScreen": "195ms"
      },
      "easing": {
        "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)",
        "easeOut": "cubic-bezier(0.0, 0, 0.2, 1)",
        "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
        "sharp": "cubic-bezier(0.4, 0, 0.6, 1)"
      }
    },
    "breakpoints": {
      "xs": 0,
      "sm": 600,
      "md": 960,
      "lg": 1280,
      "xl": 1920
    }
  },
  "liquidGlassComponents": {
    "GlassCard": {
      "description": "Base card component with glassmorphic effect",
      "muiBase": "Card",
      "defaultProps": {
        "elevation": 0
      },
      "styling": {
        "background": "rgba(255, 255, 255, 0.7)",
        "backdropFilter": "blur(20px)",
        "borderRadius": "20px",
        "border": "1px solid rgba(255, 255, 255, 0.18)",
        "boxShadow": "0 8px 32px 0 rgba(31, 38, 135, 0.15)",
        "transition": "all 0.3s cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "variants": {
        "light": {
          "background": "rgba(255, 255, 255, 0.6)",
          "backdropFilter": "blur(15px)"
        },
        "dark": {
          "background": "rgba(255, 255, 255, 0.8)",
          "backdropFilter": "blur(25px)"
        },
        "gradient": {
          "background": "linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%)",
          "backdropFilter": "blur(30px)"
        }
      },
      "darkMode": {
        "background": "rgba(30, 30, 30, 0.7)",
        "border": "1px solid rgba(255, 255, 255, 0.1)"
      },
      "hover": {
        "transform": "translateY(-4px)",
        "boxShadow": "0 12px 40px rgba(31, 38, 135, 0.2)"
      }
    },
    "GlassButton": {
      "description": "Button with glass effect",
      "muiBase": "Button",
      "variants": {
        "primary": {
          "background": "linear-gradient(45deg, #667eea 30%, #764ba2 90%)",
          "color": "#fff",
          "borderRadius": "12px",
          "padding": "12px 32px",
          "fontWeight": 600,
          "textTransform": "none",
          "boxShadow": "0 4px 12px rgba(102, 126, 234, 0.3)",
          "hover": {
            "boxShadow": "0 6px 16px rgba(102, 126, 234, 0.4)",
            "transform": "translateY(-2px)"
          }
        },
        "glass": {
          "background": "rgba(255, 255, 255, 0.25)",
          "backdropFilter": "blur(10px)",
          "border": "1px solid rgba(255, 255, 255, 0.3)",
          "borderRadius": "12px",
          "color": "#fff",
          "hover": {
            "background": "rgba(255, 255, 255, 0.35)"
          }
        },
        "outlined": {
          "border": "2px solid rgba(255, 255, 255, 0.5)",
          "borderRadius": "12px",
          "backdropFilter": "blur(5px)",
          "hover": {
            "background": "rgba(255, 255, 255, 0.1)"
          }
        }
      }
    },
    "GlassInput": {
      "description": "Text field with glass styling",
      "muiBase": "TextField",
      "styling": {
        "background": "rgba(255, 255, 255, 0.8)",
        "backdropFilter": "blur(10px)",
        "borderRadius": "12px",
        "fieldset": {
          "borderColor": "rgba(0, 0, 0, 0.1)",
          "borderRadius": "12px"
        },
        "hover": {
          "background": "#fff",
          "fieldset": {
            "borderColor": "rgba(102, 126, 234, 0.5)"
          }
        },
        "focused": {
          "background": "#fff",
          "fieldset": {
            "borderColor": "#667eea",
            "borderWidth": "2px"
          }
        }
      }
    },
    "GlassChip": {
      "description": "Chip with glass effect",
      "muiBase": "Chip",
      "styling": {
        "background": "rgba(102, 126, 234, 0.15)",
        "backdropFilter": "blur(10px)",
        "border": "1px solid rgba(102, 126, 234, 0.3)",
        "borderRadius": "12px",
        "fontWeight": 500,
        "hover": {
          "background": "rgba(102, 126, 234, 0.25)",
          "transform": "translateY(-2px)",
          "boxShadow": "0 4px 12px rgba(102, 126, 234, 0.3)"
        }
      }
    },
    "GlassNavbar": {
      "description": "Navigation bar with blur effect",
      "muiBase": "AppBar",
      "styling": {
        "background": "rgba(255, 255, 255, 0.7)",
        "backdropFilter": "blur(20px)",
        "borderBottom": "1px solid rgba(255, 255, 255, 0.18)",
        "boxShadow": "0 8px 32px 0 rgba(31, 38, 135, 0.07)",
        "transition": "all 0.3s cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "scrolled": {
        "background": "rgba(255, 255, 255, 0.95)",
        "boxShadow": "0 4px 20px rgba(0, 0, 0, 0.1)"
      }
    }
  },
  "animationLibrary": {
    "fadeIn": {
      "keyframes": {
        "from": {
          "opacity": 0
        },
        "to": {
          "opacity": 1
        }
      },
      "duration": "0.6s",
      "easing": "ease-out"
    },
    "fadeInUp": {
      "keyframes": {
        "from": {
          "opacity": 0,
          "transform": "translateY(30px)"
        },
        "to": {
          "opacity": 1,
          "transform": "translateY(0)"
        }
      },
      "duration": "0.6s",
      "easing": "ease-out"
    },
    "slideInFromRight": {
      "keyframes": {
        "from": {
          "transform": "translateX(100%)"
        },
        "to": {
          "transform": "translateX(0)"
        }
      },
      "duration": "0.3s",
      "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "bounce": {
      "keyframes": {
        "0%, 100%": {
          "transform": "translateY(0)"
        },
        "50%": {
          "transform": "translateY(-10px)"
        }
      },
      "duration": "2s",
      "iterationCount": "infinite",
      "easing": "ease-in-out"
    },
    "gradientShift": {
      "keyframes": {
        "0%": {
          "backgroundPosition": "0% 50%"
        },
        "50%": {
          "backgroundPosition": "100% 50%"
        },
        "100%": {
          "backgroundPosition": "0% 50%"
        }
      },
      "duration": "15s",
      "iterationCount": "infinite",
      "easing": "ease"
    },
    "cardHover": {
      "trigger": "hover",
      "properties": {
        "transform": "translateY(-8px)",
        "boxShadow": "0 20px 40px rgba(0, 0, 0, 0.15)"
      },
      "duration": "0.3s",
      "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "buttonHover": {
      "trigger": "hover",
      "properties": {
        "transform": "translateY(-2px)",
        "boxShadow": "0 6px 16px rgba(102, 126, 234, 0.4)"
      },
      "duration": "0.2s",
      "easing": "ease"
    }
  },
  "responsivePatterns": {
    "containerMaxWidths": {
      "sm": "600px",
      "md": "960px",
      "lg": "1280px",
      "xl": "1440px"
    },
    "gridSpacing": {
      "mobile": 2,
      "tablet": 3,
      "desktop": 4
    },
    "padding": {
      "mobile": "16px",
      "tablet": "24px",
      "desktop": "32px"
    },
    "sectionSpacing": {
      "mobile": "64px",
      "tablet": "80px",
      "desktop": "120px"
    }
  },
  "accessibilityGuidelines": {
    "colorContrast": {
      "minimum": "4.5:1 for normal text",
      "large": "3:1 for large text (18px+ or 14px+ bold)",
      "standard": "WCAG AA"
    },
    "focusIndicators": {
      "visible": true,
      "outline": "2px solid primary.main",
      "outlineOffset": "2px"
    },
    "ariaLabels": {
      "required": "all interactive elements without visible text",
      "buttons": "descriptive action labels",
      "icons": "icon purpose description"
    },
    "keyboardNavigation": {
      "tabOrder": "logical and sequential",
      "skipLinks": "skip to main content available",
      "focusTrap": "in modals and drawers"
    },
    "screenReaderSupport": {
      "semanticHTML": "proper heading hierarchy (h1-h6)",
      "landmarkRoles": "header, nav, main, footer",
      "liveRegions": "for dynamic content updates"
    }
  },
  "performanceOptimizations": {
    "images": {
      "component": "next/image",
      "lazyLoading": true,
      "formats": ["webp", "avif", "jpg"],
      "sizes": "responsive based on viewport"
    },
    "fonts": {
      "component": "next/font",
      "preload": true,
      "display": "swap",
      "subset": "latin"
    },
    "animations": {
      "preferReducedMotion": "respect user preference",
      "gpuAccelerated": "use transform and opacity",
      "willChange": "use sparingly for animating elements"
    },
    "code": {
      "splitting": "by route",
      "bundleSize": "monitor with bundle analyzer",
      "treeshaking": "remove unused code"
    }
  }
}

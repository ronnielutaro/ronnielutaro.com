{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "documentName": "Design System & Component Library",
  "documentId": "design-system-001",
  "version": "2.0.0",
  "description": "Premium Dark Glassmorphism Design System with Blue Light Beams & Emerald Accents",
  "themeConfiguration": {
    "colorPalette": {
      "primary": {
        "main": "#3b82f6",
        "light": "#60a5fa",
        "dark": "#2563eb",
        "contrastText": "#ffffff"
      },
      "secondary": {
        "main": "#2563eb",
        "light": "#3b82f6",
        "dark": "#1d4ed8",
        "contrastText": "#ffffff"
      },
      "accent": {
        "emerald": "#34d399",
        "emeraldDark": "#10b981",
        "emeraldLight": "#6ee7b7"
      },
      "gradients": {
        "primary": "linear-gradient(135deg, #3b82f6 0%, #2563eb 100%)",
        "emerald": "linear-gradient(135deg, #34d399 0%, #10b981 100%)",
        "blue": "linear-gradient(135deg, rgba(59,130,246,0.9) 0%, rgba(37,99,235,0.9) 100%)",
        "subtle": "linear-gradient(180deg, rgba(59, 130, 246, 0.1) 0%, transparent 100%)"
      },
      "neutral": {
        "50": "#f8fafc",
        "100": "#f1f5f9",
        "200": "#e2e8f0",
        "300": "#cbd5e1",
        "400": "#94a3b8",
        "500": "#64748b",
        "600": "#475569",
        "700": "#334155",
        "800": "#1e293b",
        "900": "#0f172a"
      },
      "background": {
        "default": "#06080f",
        "paper": "#0a0e1a",
        "glass": "rgba(255, 255, 255, 0.05)",
        "glassDark": "rgba(10, 14, 26, 0.4)"
      },
      "text": {
        "primary": "#ffffff",
        "secondary": "rgba(255, 255, 255, 0.7)",
        "disabled": "rgba(255, 255, 255, 0.5)"
      }
    },
    "lightBeams": {
      "description": "Premium blue light beam effects for backgrounds",
      "mainDiagonal": {
        "width": "1400px",
        "height": "1400px",
        "background": "radial-gradient(ellipse at center, rgba(59,130,246,0.9) 0%, rgba(59,130,246,0.6) 15%, rgba(59,130,246,0.3) 35%, rgba(59,130,246,0) 60%)",
        "blur": "100px",
        "rotation": "-35deg",
        "animation": "glow1 15s ease-in-out infinite"
      },
      "secondaryDiagonal": {
        "width": "1200px",
        "height": "1200px",
        "background": "radial-gradient(ellipse at center, rgba(37,99,235,0.8) 0%, rgba(37,99,235,0.5) 15%, rgba(37,99,235,0.2) 35%, rgba(37,99,235,0) 60%)",
        "blur": "90px",
        "rotation": "35deg",
        "animation": "glow2 18s ease-in-out infinite"
      },
      "centerAccent": {
        "width": "800px",
        "height": "800px",
        "background": "radial-gradient(circle, rgba(96,165,250,0.4) 0%, rgba(96,165,250,0) 50%)",
        "blur": "120px",
        "animation": "pulse 10s ease-in-out infinite"
      },
      "sharpBeam": {
        "width": "1000px",
        "height": "4px",
        "background": "linear-gradient(90deg, rgba(59,130,246,0) 0%, rgba(59,130,246,0.6) 50%, rgba(59,130,246,0) 100%)",
        "blur": "3px",
        "rotation": "-45deg",
        "boxShadow": "0 0 40px rgba(59,130,246,0.8)"
      }
    },
    "darkMode": {
      "enabled": true,
      "default": true,
      "palette": {
        "background": {
          "default": "#06080f",
          "paper": "#0a0e1a",
          "glass": "rgba(255, 255, 255, 0.05)"
        },
        "text": {
          "primary": "#ffffff",
          "secondary": "rgba(255, 255, 255, 0.7)",
          "disabled": "rgba(255, 255, 255, 0.5)"
        }
      }
    },
    "typography": {
      "fontFamily": {
        "primary": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif",
        "code": "'JetBrains Mono', 'Fira Code', 'Courier New', monospace"
      },
      "scale": {
        "h1": {
          "fontSize": {
            "mobile": "2.5rem",
            "tablet": "3.5rem",
            "desktop": "4rem"
          },
          "fontWeight": 800,
          "lineHeight": 1.1,
          "letterSpacing": "-0.02em"
        },
        "h2": {
          "fontSize": {
            "mobile": "2rem",
            "tablet": "2.75rem",
            "desktop": "3rem"
          },
          "fontWeight": 700,
          "lineHeight": 1.2,
          "letterSpacing": "-0.01em"
        },
        "h3": {
          "fontSize": {
            "mobile": "1.75rem",
            "tablet": "2rem",
            "desktop": "2.25rem"
          },
          "fontWeight": 700,
          "lineHeight": 1.3
        },
        "h4": {
          "fontSize": {
            "mobile": "1.5rem",
            "tablet": "1.75rem",
            "desktop": "2rem"
          },
          "fontWeight": 600,
          "lineHeight": 1.4
        },
        "h5": {
          "fontSize": "1.5rem",
          "fontWeight": 600,
          "lineHeight": 1.4
        },
        "h6": {
          "fontSize": "1.25rem",
          "fontWeight": 600,
          "lineHeight": 1.5
        },
        "body1": {
          "fontSize": "1.125rem",
          "fontWeight": 400,
          "lineHeight": 1.7
        },
        "body2": {
          "fontSize": "1rem",
          "fontWeight": 400,
          "lineHeight": 1.6
        },
        "caption": {
          "fontSize": "0.875rem",
          "fontWeight": 400,
          "lineHeight": 1.5
        }
      }
    },
    "spacing": {
      "unit": 8,
      "scale": [0, 4, 8, 12, 16, 24, 32, 40, 48, 64, 80, 96, 120]
    },
    "borderRadius": {
      "small": "8px",
      "medium": "12px",
      "large": "16px",
      "xlarge": "20px",
      "xxlarge": "24px",
      "round": "50%"
    },
    "shadows": {
      "glass": "0 8px 32px rgba(0, 0, 0, 0.6), 0 0 0 1px rgba(255, 255, 255, 0.05) inset",
      "glassSoft": "0 8px 32px rgba(0, 0, 0, 0.4)",
      "elevation1": "0 2px 8px rgba(0, 0, 0, 0.3)",
      "elevation2": "0 4px 16px rgba(0, 0, 0, 0.4)",
      "elevation3": "0 8px 24px rgba(0, 0, 0, 0.5)",
      "elevation4": "0 12px 32px rgba(0, 0, 0, 0.6)",
      "glow": "0 0 20px rgba(59, 130, 246, 0.4)",
      "glowEmerald": "0 0 20px rgba(52, 211, 153, 0.4)",
      "blueGlow": "0 20px 60px rgba(59, 130, 246, 0.4)"
    },
    "transitions": {
      "duration": {
        "shortest": "150ms",
        "shorter": "200ms",
        "short": "250ms",
        "standard": "300ms",
        "complex": "375ms",
        "enteringScreen": "225ms",
        "leavingScreen": "195ms"
      },
      "easing": {
        "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)",
        "easeOut": "cubic-bezier(0.0, 0, 0.2, 1)",
        "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
        "sharp": "cubic-bezier(0.4, 0, 0.6, 1)"
      }
    },
    "breakpoints": {
      "xs": 0,
      "sm": 600,
      "md": 960,
      "lg": 1280,
      "xl": 1920
    }
  },
  "liquidGlassComponents": {
    "GlassCard": {
      "description": "Base card component with dark glassmorphic effect",
      "muiBase": "Card",
      "defaultProps": {
        "elevation": 0
      },
      "styling": {
        "background": "rgba(255, 255, 255, 0.05)",
        "backdropFilter": "blur(24px) saturate(180%)",
        "borderRadius": "24px",
        "border": "1px solid rgba(255, 255, 255, 0.18)",
        "boxShadow": "0 8px 32px rgba(0, 0, 0, 0.6), 0 0 0 1px rgba(255, 255, 255, 0.05) inset",
        "transition": "all 0.3s cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "variants": {
        "light": {
          "background": "rgba(255, 255, 255, 0.05)",
          "backdropFilter": "blur(24px) saturate(180%)",
          "border": "1px solid rgba(255, 255, 255, 0.18)"
        },
        "dark": {
          "background": "rgba(10, 14, 26, 0.4)",
          "backdropFilter": "blur(28px) saturate(200%)",
          "border": "1px solid rgba(96, 165, 250, 0.2)"
        },
        "gradient": {
          "background": "linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(37, 99, 235, 0.05) 100%)",
          "backdropFilter": "blur(32px) saturate(200%)",
          "border": "1px solid rgba(96, 165, 250, 0.25)"
        }
      },
      "hover": {
        "transform": "translateY(-6px)",
        "border": "1px solid rgba(96, 165, 250, 0.5)",
        "boxShadow": "0 20px 60px rgba(59, 130, 246, 0.4), 0 8px 32px rgba(0, 0, 0, 0.6), 0 0 0 1px rgba(255, 255, 255, 0.1) inset"
      }
    },
    "GlassButton": {
      "description": "Button with glass effect and blue/emerald variants",
      "muiBase": "Button",
      "variants": {
        "primary": {
          "background": "linear-gradient(135deg, rgba(59, 130, 246, 0.9) 0%, rgba(37, 99, 235, 0.9) 100%)",
          "color": "#fff",
          "borderRadius": "12px",
          "padding": "12px 32px",
          "fontWeight": 600,
          "textTransform": "none",
          "border": "1px solid rgba(96, 165, 250, 0.3)",
          "boxShadow": "0 4px 16px rgba(59, 130, 246, 0.4)",
          "hover": {
            "background": "linear-gradient(135deg, rgba(37, 99, 235, 1) 0%, rgba(29, 78, 216, 1) 100%)",
            "boxShadow": "0 6px 20px rgba(59, 130, 246, 0.6)",
            "transform": "translateY(-2px)"
          }
        },
        "emerald": {
          "background": "linear-gradient(135deg, #34d399 0%, #10b981 100%)",
          "color": "#fff",
          "borderRadius": "12px",
          "padding": "12px 32px",
          "fontWeight": 600,
          "textTransform": "none",
          "boxShadow": "0 4px 16px rgba(52, 211, 153, 0.4)",
          "hover": {
            "background": "linear-gradient(135deg, #10b981 0%, #059669 100%)",
            "boxShadow": "0 6px 20px rgba(52, 211, 153, 0.6)"
          }
        },
        "glass": {
          "background": "rgba(255, 255, 255, 0.05)",
          "backdropFilter": "blur(20px) saturate(180%)",
          "border": "1px solid rgba(255, 255, 255, 0.15)",
          "borderRadius": "12px",
          "color": "#fff",
          "boxShadow": "0 4px 16px rgba(0, 0, 0, 0.3), inset 0 0 0 1px rgba(255, 255, 255, 0.1)",
          "hover": {
            "background": "rgba(255, 255, 255, 0.08)",
            "border": "1px solid rgba(96, 165, 250, 0.3)"
          }
        },
        "outlined": {
          "border": "2px solid rgba(96, 165, 250, 0.4)",
          "borderRadius": "12px",
          "background": "transparent",
          "color": "#60a5fa",
          "backdropFilter": "blur(5px)",
          "hover": {
            "background": "rgba(59, 130, 246, 0.1)",
            "border": "2px solid rgba(96, 165, 250, 0.6)"
          }
        }
      }
    },
    "GlassInput": {
      "description": "Text field with dark glass styling",
      "muiBase": "TextField",
      "styling": {
        "background": "rgba(255, 255, 255, 0.05)",
        "backdropFilter": "blur(10px)",
        "borderRadius": "12px",
        "color": "#fff",
        "fieldset": {
          "borderColor": "rgba(96, 165, 250, 0.2)",
          "borderRadius": "12px"
        },
        "hover": {
          "background": "rgba(255, 255, 255, 0.08)",
          "fieldset": {
            "borderColor": "rgba(96, 165, 250, 0.4)"
          }
        },
        "focused": {
          "background": "rgba(255, 255, 255, 0.08)",
          "fieldset": {
            "borderColor": "#3b82f6",
            "borderWidth": "2px",
            "boxShadow": "0 0 0 4px rgba(59, 130, 246, 0.1)"
          }
        }
      }
    },
    "GlassChip": {
      "description": "Chip with dark glass effect",
      "muiBase": "Chip",
      "styling": {
        "background": "rgba(59, 130, 246, 0.15)",
        "backdropFilter": "blur(10px)",
        "border": "1px solid rgba(96, 165, 250, 0.3)",
        "borderRadius": "12px",
        "color": "#60a5fa",
        "fontWeight": 500,
        "hover": {
          "background": "rgba(59, 130, 246, 0.25)",
          "border": "1px solid rgba(96, 165, 250, 0.5)",
          "transform": "translateY(-2px)",
          "boxShadow": "0 4px 12px rgba(59, 130, 246, 0.3)"
        }
      },
      "variants": {
        "primary": {
          "background": "rgba(59, 130, 246, 0.2)",
          "color": "#60a5fa",
          "border": "1px solid rgba(96, 165, 250, 0.3)"
        },
        "success": {
          "background": "rgba(52, 211, 153, 0.2)",
          "color": "#34d399",
          "border": "1px solid rgba(52, 211, 153, 0.3)"
        },
        "warning": {
          "background": "rgba(251, 191, 36, 0.2)",
          "color": "#fbbf24",
          "border": "1px solid rgba(251, 191, 36, 0.3)"
        }
      }
    },
    "GlassNavbar": {
      "description": "Navigation bar with dark glass blur effect",
      "muiBase": "AppBar",
      "styling": {
        "background": "rgba(255, 255, 255, 0.05)",
        "backdropFilter": "blur(20px) saturate(180%)",
        "border": "1px solid rgba(255, 255, 255, 0.1)",
        "borderRadius": "16px",
        "boxShadow": "0 8px 32px rgba(0, 0, 0, 0.4)",
        "transition": "all 0.3s cubic-bezier(0.4, 0, 0.2, 1)",
        "position": "fixed",
        "top": "24px",
        "left": "50%",
        "transform": "translateX(-50%)"
      },
      "activeLink": {
        "color": "#34d399",
        "fontWeight": 600
      },
      "scrolled": {
        "background": "rgba(255, 255, 255, 0.08)",
        "boxShadow": "0 8px 32px rgba(0, 0, 0, 0.6)"
      }
    }
  },
  "animationLibrary": {
    "fadeIn": {
      "keyframes": {
        "from": {
          "opacity": 0
        },
        "to": {
          "opacity": 1
        }
      },
      "duration": "0.6s",
      "easing": "ease-out"
    },
    "fadeInUp": {
      "keyframes": {
        "from": {
          "opacity": 0,
          "transform": "translateY(30px)"
        },
        "to": {
          "opacity": 1,
          "transform": "translateY(0)"
        }
      },
      "duration": "0.6s",
      "easing": "ease-out"
    },
    "slideInFromRight": {
      "keyframes": {
        "from": {
          "transform": "translateX(100%)"
        },
        "to": {
          "transform": "translateX(0)"
        }
      },
      "duration": "0.3s",
      "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "bounce": {
      "keyframes": {
        "0%, 100%": {
          "transform": "translateY(0)"
        },
        "50%": {
          "transform": "translateY(-10px)"
        }
      },
      "duration": "2s",
      "iterationCount": "infinite",
      "easing": "ease-in-out"
    },
    "gradientShift": {
      "keyframes": {
        "0%": {
          "backgroundPosition": "0% 50%"
        },
        "50%": {
          "backgroundPosition": "100% 50%"
        },
        "100%": {
          "backgroundPosition": "0% 50%"
        }
      },
      "duration": "15s",
      "iterationCount": "infinite",
      "easing": "ease"
    },
    "cardHover": {
      "trigger": "hover",
      "properties": {
        "transform": "translateY(-8px)",
        "boxShadow": "0 20px 40px rgba(0, 0, 0, 0.15)"
      },
      "duration": "0.3s",
      "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "buttonHover": {
      "trigger": "hover",
      "properties": {
        "transform": "translateY(-2px)",
        "boxShadow": "0 6px 16px rgba(102, 126, 234, 0.4)"
      },
      "duration": "0.2s",
      "easing": "ease"
    }
  },
  "responsivePatterns": {
    "containerMaxWidths": {
      "sm": "600px",
      "md": "960px",
      "lg": "1280px",
      "xl": "1440px"
    },
    "gridSpacing": {
      "mobile": 2,
      "tablet": 3,
      "desktop": 4
    },
    "padding": {
      "mobile": "16px",
      "tablet": "24px",
      "desktop": "32px"
    },
    "sectionSpacing": {
      "mobile": "64px",
      "tablet": "80px",
      "desktop": "120px"
    }
  },
  "accessibilityGuidelines": {
    "colorContrast": {
      "minimum": "4.5:1 for normal text",
      "large": "3:1 for large text (18px+ or 14px+ bold)",
      "standard": "WCAG AA"
    },
    "focusIndicators": {
      "visible": true,
      "outline": "2px solid primary.main",
      "outlineOffset": "2px"
    },
    "ariaLabels": {
      "required": "all interactive elements without visible text",
      "buttons": "descriptive action labels",
      "icons": "icon purpose description"
    },
    "keyboardNavigation": {
      "tabOrder": "logical and sequential",
      "skipLinks": "skip to main content available",
      "focusTrap": "in modals and drawers"
    },
    "screenReaderSupport": {
      "semanticHTML": "proper heading hierarchy (h1-h6)",
      "landmarkRoles": "header, nav, main, footer",
      "liveRegions": "for dynamic content updates"
    }
  },
  "performanceOptimizations": {
    "images": {
      "component": "next/image",
      "lazyLoading": true,
      "formats": ["webp", "avif", "jpg"],
      "sizes": "responsive based on viewport"
    },
    "fonts": {
      "component": "next/font",
      "preload": true,
      "display": "swap",
      "subset": "latin"
    },
    "animations": {
      "preferReducedMotion": "respect user preference",
      "gpuAccelerated": "use transform and opacity",
      "willChange": "use sparingly for animating elements"
    },
    "code": {
      "splitting": "by route",
      "bundleSize": "monitor with bundle analyzer",
      "treeshaking": "remove unused code"
    }
  }
}
